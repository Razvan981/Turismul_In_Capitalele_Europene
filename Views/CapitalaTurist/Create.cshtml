@model Turismul_In_Capitalele_Europene.Models.CapitalaTurist

@{
    ViewData["Title"] = "Create";
}

<center>

    <div class="titlupag">Descrieti cea mai recenta calatorie a dumneavoastra</div>

</center>

<div class="col-md-4">
    <div class="camp1">
        <div class="camp">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CapitalaId" class="control-label">Capitala</label>
                    <select asp-for="CapitalaId" class="form-control" asp-items="ViewBag.CapitalaId"></select>
