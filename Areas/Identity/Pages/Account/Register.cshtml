
@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link href="https://fonts.googleapis.com/css?family=Tangerine:700" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="~/css/site.css" />


<center>

    <div class="titlu_register">Inregistrare</div>

</center>


<div class="col-md-4">
    <div class="camp1">
        <div class="camp">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Creaza-ti un cont :)</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Nume"></label>
            <input asp-for="Input.Nume" class="form-control" />
            <span asp-validation-for="Input.Nume" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Prenume"></label>
            <input asp-for="Input.Prenume" class="form-control" />
            <span asp-validation-for="Input.Prenume" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password">Parola</label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"> Confirma Parola</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
