@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Ștergerea Datelor Personale";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Ștergerea acestor date va elimina definitiv contul dumneavoastra, iar acest lucru nu poate fi recuperat.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password">Introduceti Parola</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Sterge Datele si Inchide Contul</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}